@model DemoWebApplication.Models.Person

@{
    ViewData["Title"] = "Add Profile Data";
}

<h1> Add Profile Picture</h1>

<div class="col-md-4">
    <form asp-action="AddProfilePicture" asp-controller="User" enctype="multipart/form-data" asp-route-username="@ViewBag.Username" method="post" >
        <div class="form-group">
            <div asp-validation-summary="All" class="text-danger"></div>
            <label asp-for="FilePath" class="control-label"></label>
            <input type="file" asp-for="FilePath" class="form-control" name ="file" />
        </div>
        <div class="form-group">
        <button type="submit" value="Create" class="btn btn-primary">Upload</button>
        </div>
    </form>
</div>