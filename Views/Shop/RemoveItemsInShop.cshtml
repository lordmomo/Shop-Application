@model DemoWebApplication.Models.Item

@{
    ViewBag.Title = "Remove item in shop";
}

<h1>Remove item</h1>
<h3>Enter product id to remove</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RemoveItemsInShop" asp-controller="Shop" asp-route-username="@ViewBag.Username" method="post">

            <div asp-validation-summary="All" class="text-danger"></div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                <input asp-for="ProductId" class="form-control" />
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" value="Create" class="btn btn-danger" >Delete</button>
                <button type ="submit" onClick="history.back()" class="btn-dark btn primary">Return</button>
            </div>
        </form>
    </div>
</div>